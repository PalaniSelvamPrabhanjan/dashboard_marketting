# Example environment variables for dupe sites (fb-dupe, tw-dupe, tt-dupe)
# Copy this file to .env in your dupe site project and fill in the values

# ============================================
# Application Configuration
# ============================================

# Platform identifier (must be one of: fb-dupe, tw-dupe, tt-dupe)
PLATFORM_ID=fb-dupe

# Application port
PORT=3000

# Node environment
NODE_ENV=development

# ============================================
# Database Configuration
# ============================================

# PostgreSQL connection string
DATABASE_URL=postgresql://user:password@localhost:5432/fb_dupe_db

# OR use Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ============================================
# Authentication
# ============================================

# JWT secret for signing tokens
JWT_SECRET=your-very-secret-jwt-key-change-in-production

# JWT expiration time (e.g., '24h', '7d')
JWT_EXPIRES_IN=24h

# Bcrypt salt rounds
BCRYPT_SALT_ROUNDS=10

# ============================================
# Social Desk Integration
# ============================================

# Social Desk webhook URL
SOCIAL_DESK_INGEST_URL=https://aabzwjzzchkddrlcxxjk.supabase.co/functions/v1/ingest-platform-stats

# Shared secret for HMAC signature generation (MUST match Social Desk secret)
SOCIAL_DESK_WEBHOOK_SECRET=your-shared-webhook-secret-change-in-production

# Social Desk Supabase anon key
SOCIAL_DESK_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6ImFhYnp3anp6Y2hrZGRybGN4eGprIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NjI1MTkzMzgsImV4cCI6MjA3ODA5NTMzOH0.QEVjlkVCiYwPufEjGqwo3kc10HOeIBiVAye0Wmp-mUo

# ============================================
# File Storage (Optional)
# ============================================

# For media uploads (images, videos)
# Option 1: Use Supabase Storage
SUPABASE_STORAGE_BUCKET=media

# Option 2: Use AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-bucket-name
AWS_REGION=us-east-1

# Option 3: Use Cloudinary
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ============================================
# Redis (Optional - for caching and sessions)
# ============================================

REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# ============================================
# Rate Limiting
# ============================================

# Requests per minute per IP
RATE_LIMIT_MAX=60

# Rate limit window in milliseconds
RATE_LIMIT_WINDOW_MS=60000

# ============================================
# CORS Configuration
# ============================================

# Allowed origins (comma-separated)
CORS_ORIGIN=http://localhost:5173,https://your-frontend-domain.com

# ============================================
# Webhook Scheduler
# ============================================

# Cron expression for sending stats to Social Desk
# Default: Every hour at minute 0 (0 * * * *)
STATS_CRON_SCHEDULE=0 * * * *

# Enable/disable webhook sending
WEBHOOK_ENABLED=true

# ============================================
# Logging
# ============================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# ============================================
# Email (Optional - for notifications)
# ============================================

# SMTP configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Email from address
EMAIL_FROM=noreply@fb-dupe.com

# ============================================
# Frontend URL
# ============================================

# URL of your frontend application
FRONTEND_URL=http://localhost:5173

# ============================================
# Security
# ============================================

# Enable HTTPS redirect in production
FORCE_HTTPS=false

# Session secret
SESSION_SECRET=your-session-secret-change-in-production

# Cookie settings
COOKIE_SECURE=false
COOKIE_SAME_SITE=lax

# ============================================
# Platform-Specific Features
# ============================================

# fb-dupe specific
FB_MAX_FRIENDS=5000
FB_MAX_PHOTO_SIZE_MB=10

# tw-dupe specific
TW_MAX_TWEET_LENGTH=280
TW_MAX_MEDIA_COUNT=4

# tt-dupe specific
TT_MAX_VIDEO_LENGTH_SECONDS=180
TT_MAX_VIDEO_SIZE_MB=100

# ============================================
# Monitoring & Analytics (Optional)
# ============================================

# Sentry for error tracking
SENTRY_DSN=your-sentry-dsn

# Google Analytics
GA_TRACKING_ID=UA-XXXXXXXXX-X

# ============================================
# Development
# ============================================

# Enable debug mode
DEBUG=false

# Enable API documentation (Swagger)
ENABLE_API_DOCS=true
